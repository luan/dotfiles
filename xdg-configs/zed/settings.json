// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "default_profile": "write",
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "wrap_guides": [180],
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "icon_theme": "Catppuccin Mocha",
  "auto_signature_help": true,
  "chat_panel": { "button": "when_in_call" },
  "notification_panel": { "button": false },
  "show_edit_predictions": true,
  "hover_popover_enabled": true,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "show_whitespaces": "selection",
  "theme": "Tokyo Night",
  "ui_font_size": 16,
  "ui_font_family": "Zed Sans",
  "ui_font_weight": 300,
  "buffer_font_size": 14,
  "buffer_font_family": "Zed Mono",
  "buffer_font_weight": 300,
  "buffer_font_fallbacks": ["ZedMono Nerd Font", "Zed Mono", "Zed Sans"],
  "terminal": {
    "option_as_meta": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        },
        "cargo": {
          "features": "all"
        }
      }
    },
    "sourcekit-lsp": {
      "initialization_options": {
        "completion": {
          "completeFunctionCalls": true
        }
      }
    }
  },
  "format_on_save": "on",
  "helix_mode": true,
  "vim_mode": true,
  "languages": {
    "Swift": {
      "formatter": {
        "external": {
          "command": "swiftformat",
          "arguments": ["--config", ".swiftformat"]
        }
      }
    }
  }
}
